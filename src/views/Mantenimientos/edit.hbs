<div class="conteiner p-4 ">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    Solicitar Mantenimiento
                </div>
                <div class="card-body">
                   
                   <form action="/mantenimientos/edit/{{m.IdMantenimiento}}" method="post">

                    <div class="form-group">
                        <label for="Codigo">Codigo Computadora</label>
                        <input type="text" class="form-control" id="Codigo" name="FkIdComputadora" placeholder="" value="{{m.FkIdComputadora}}" readonly>
                    </div>
                    
                    <div class="form-group">
                        <label for="datetime">Fecha</label>
                        <input type="date" class="form-control" id="datetime" name="Fecha" value="{{ChangeFecha m.Fecha}}">
                    </div>


                    <div class="form-group">
                        <label for="Tipo">Tipo</label>
                            <select id="Tipo" class="form-control" name="Tipo">
                                {{#xif m.Tipo "Inicial"}}
                                    <option value="1" selected>Inicial</option>
                                    <option value="2" >Preventico</option>
                                    <option value="3" >Correctivo</option>
                                {{/xif}}
                                {{#xif m.Tipo "Preventivo"}}
                                    <option value="1" >Inicial</option>
                                    <option value="2" selected>Preventico</option>
                                    <option value="3" >Correctivo</option>
                                {{/xif}}
                                {{#xif m.Tipo "Correctivo"}}
                                    <option value="1" >Inicial</option>
                                    <option value="2" >Preventico</option>
                                    <option value="3" selected>Correctivo</option>
                                {{/xif}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="Problematica">Problematica</label>
                        <textarea class="form-control" id="Problematica" name="Problematica" rows="3" required>{{m.Problematica}}</textarea>
                    </div>


                    <div class="form-group">  
                        <button class="btn btn-success btn-block">Guardar</button>
                    </div>

                   </form>

                </div>
            </div>
        </div>
    </div>
</div>