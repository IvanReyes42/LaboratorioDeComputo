<div class="container p-4">
    <div class="row ">
        <div class="col-md-9">
            <form action="/laboratorios" method="post">
                <div class="form-row">
                    <div class="col-md-11">
                         <input type="text" class="form-control" placeholder="Buscar" name="Buscar" autofocus>
                    </div>
                    <div class="col-md-1">
                         <button class="btn">
                             <i class="fa-solid fa-magnifying-glass"></i>
                         </button>
                    </div>
                </div>
            </form>
        </div>
        
        <div class="col-md-3">
            <a href="/laboratorios/add" class="btn btn-success"> Nuevo Laboratorio </a>
        </div>
    </div>
</div>

<div class="container p-4">
    <div class="row table-responsive">
        <table class="table">
            <thead>
                <tr>
                <th scope="col">Codigo</th>
                <th scope="col">Nombre</th>
                <th scope="col">Ubicación</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
            {{#each Laboratorios}}
                <tr>
                <th scope="row">{{IdLaboratorio}}</th>
                <td>{{Nombre}}</td>
                <td>{{Ubicacion}}</td>
                <td>

                    <a href="/laboratorios/edit/{{IdLaboratorio}}" class="btn btn-info">Editar</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Eliminar{{IdLaboratorio}}">
                        Eliminar
                    </button>
                    <a href="/laboratorios/{{IdLaboratorio}}" class="btn btn-info">Ver Laboratorio</a>

                </td>
                </tr>
                <tr>
            
            <div class="modal fade" id="Eliminar{{IdLaboratorio}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Eliminar Laboratorio</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ¿Esta seguro de eliminar el {{Nombre}}?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                         <a href="/laboratorios/delete/{{IdLaboratorio}}" class="btn btn-danger">Eliminar</a>
                    </div>
                    </div>
                </div>
                </div>

            {{/each}}    
            </tbody>
            </table>
    </div>
</div>